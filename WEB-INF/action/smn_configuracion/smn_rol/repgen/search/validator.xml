<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_usuario_rf' type='varchar' required='false' label='${lbl:b_user}' maxlen='10'/>
	<parameter id='rol_tipo' type='varchar' required='false' label='${lbl:b_type_rol}' maxlen='2'/>
	<parameter id='smn_corporaciones_rf' type='integer' required='false' label='${lbl:b_corporation}' maxlen='10'/>
	<parameter id='smn_entidades_rf' type='integer' required='false' label='${lbl:b_company}' maxlen='10'/>
	<parameter id='smn_sucursales_rf' type='integer' required='false' label='${lbl:b_branches}' maxlen='10'/>
	<parameter id='smn_areas_servicios_rf' type='integer' required='false' label='${lbl:b_service_area}' maxlen='10'/>
	<parameter id='smn_unidades_servicios_rf' type='integer' required='false' label='${lbl:b_service_unit}' maxlen='10'/>
	<parameter id='smn_estructura_organizacional_rf' type='integer' required='false' label='${lbl:b_structure_position}' maxlen='10'/>
	<parameter id='rol_estatus' type='varchar' required='false' label='${lbl:b_estatus}' maxlen='2'/>
	<parameter id='rol_vigencia' type='date' required='false' label='${lbl:b_validity}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_usuario_rf'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='rol_tipo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='rol_estatus'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
